    $( document ).ready(function() {
        console.log('document ready bootstrap: '+$.fn.tooltip.Constructor.VERSION);
    });

    // gulpfile.js
    //elixir.config.sourcemaps = false;
    var elixir = require('laravel-elixir');
    /*
     |--------------------------------------------------------------------------
     | Elixir Asset Management
     |--------------------------------------------------------------------------
     |
     | Elixir provides a clean, fluent API for defining some basic Gulp tasks
     | for your Laravel application. By default, we are compiling the Sass
     | file for our application, as well as publishing vendor resources.
     |
     */
    elixir(function(mix) {
        var appPaths = {
            'app_sass'  : 'resources/assets/sass',
            'app_less'  : 'resources/assets/less',
            'app_js'    : 'resources/assets/js',
            'styles'    : 'resources/assets/css',
            'scripts'   : 'resources/assets/js',
            'mermaid'   : 'node_modules/mermaid/dist',
            'openlayer' : 'node_modules/openlayers/dist',
        };

        mix.copy('node_modules/font-awesome/fonts','public/fonts');

        // css is compiled into public/css
        mix.sass([
            appPaths.app_sass+'/app.scss',
        ], 'public/css/app.min.css');

        // js is compiled into public/js
        mix.browserify([
            appPaths.app_js+'/app.js',
        ], 'public/js/app.min.js');

        // css is copyed into public/assets/css
        mix.styles([
            appPaths.styles+'/controlcentro.css',
    //        appPaths.mermaid+'/mermaid.css',
    //        appPaths.openlayer+'/ol.css',
        ], 'public/assets/css/controlcentro.min.css'); // ,'\./'

        // js is copyed into public/assets/js
        mix.scripts([
            appPaths.scripts+'/controlcentro.js'
        ], 'public/assets/js/controlcentro.min.js'); // ,'\./'
    });
    
    // Run all tasks...
pan4@dssfactory:/var/www/controlcentro.com$ gulp
    // Run all tasks and minify all CSS and JavaScript...
pan4@dssfactory:/var/www/controlcentro.com$ gulp --production


