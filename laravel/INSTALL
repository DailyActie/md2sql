    // Install ZeroMQ
    // https://eole-io.github.io/sandstone/install-zmq-php-linux.html
pan4@dssfactory:~/php-ext$ sudo apt-get install build-essential libtool autoconf uuid-dev pkg-config git libsodium
// pan4@dssfactory:~/php-ext$ wget https://archive.org/download/zeromq_4.1.4/zeromq-4.1.4.tar.gz
// pan4@dssfactory:~/php-ext$ tar -xvzf zeromq-4.1.4.tar.gz
// pan4@dssfactory:~/php-ext$ cd zeromq-4.1.4
// pan4@dssfactory:~/php-ext/zeromq-4.1.4$ ./configure

    // https://gist.github.com/cdjhlee/b8e3c927a01b0948b42d
pan4@dssfactory:~/php-ext$ sudo apt-get install -y libtool pkg-config build-essential autoconf automake uuid-dev
pan4@dssfactory:~/php-ext$ wget http://download.zeromq.org/zeromq-4.0.5.tar.gz
pan4@dssfactory:~/php-ext$ tar xvzf zeromq-4.0.5.tar.gz
pan4@dssfactory:~/php-ext$ cd zeromq-4.0.5
pan4@dssfactory:~/php-ext/zeromq-4.0.5$ sudo make install
pan4@dssfactory:~/php-ext/zeromq-4.0.5$ sudo ldconfig
pan4@dssfactory:~/php-ext/zeromq-4.0.5$ ldconfig -p | grep zmq

    // Installing the PHP binding
pan4@dssfactory:~/php-ext$ git clone git://github.com/mkoppanen/php-zmq.git
pan4@dssfactory:~/php-ext$ cd php-zmq
pan4@dssfactory:~/php-ext/php-zmq$ phpize && ./configure
pan4@dssfactory:~/php-ext/php-zmq$ make
pan4@dssfactory:~/php-ext/php-zmq$ sudo make install
// Installing shared extensions:     /usr/lib/php5/20121212+lfs/
pan4@dssfactory:~/php-ext/php-zmq$ sudo vim /etc/php5/apache2/php.ini 
// extension=zmq.so
pan4@dssfactory:~/php-ext/php-zmq$ sudo vim /etc/php5/cli/php.ini 
// extension=zmq.so
pan4@dssfactory:~/php-ext/php-zmq$ sudo service apache2 restart

